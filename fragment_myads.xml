<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smdproject.Myads">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0012BD"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/arrow_back22"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/Ali1"
                android:contentDescription="Back Arrow"
                android:src="@drawable/arrow_back" />

            <TextView
                android:id="@+id/textNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="35dp"
                android:text="My Ads"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:background="#FFFFFF"
            >

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:background="#F5F0E5"
                android:layout_width="350dp"
                android:layout_height="160dp">

                <RelativeLayout
                    android:id="@+id/imgcontainer2"
                    android:layout_centerVertical="true"
                    android:layout_width="150dp"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_1" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/info2"
                    android:layout_toRightOf="@id/imgcontainer2"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:background="#D9D9D9"
                    android:layout_width="190dp"
                    android:layout_height="140dp">

                    <TextView
                        android:id="@+id/text21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:text="Honda Civic 1.5 RS Turbo"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        />

                    <TextView
                        android:id="@+id/text22"
                        android:layout_below="@id/text21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="20dp"
                        android:text="PKR 66.5 lacs"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />

                    <RelativeLayout
                        android:id="@+id/info21"
                        android:layout_below="@id/text22"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/CalendarIcon2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="05dp"
                            android:layout_marginTop="0dp"
                            android:contentDescription="CalendarIcon"
                            android:src="@drawable/calendar_symbol_svgrepo_com" />
                        <TextView
                            android:id="@+id/modeltext2"
                            android:layout_toRightOf="@id/CalendarIcon2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="5dp"
                            android:text="2020"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            />
                        <ImageView
                            android:id="@+id/MileageIcon2"
                            android:layout_toRightOf="@id/modeltext2"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="0dp"
                            android:contentDescription="MileageIcon"
                            android:src="@drawable/mileage" />

                        <TextView
                            android:id="@+id/mileagetext2"
                            android:layout_toRightOf="@id/MileageIcon2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="2dp"
                            android:text="36,000km"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_below="@id/info21"
                        android:layout_marginTop="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/FuelIcon2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="05dp"
                            android:layout_marginTop="0dp"
                            android:contentDescription="FuelIcon"
                            android:src="@drawable/gas_station_icon" />
                        <TextView
                            android:id="@+id/Fueltext2"
                            android:layout_toRightOf="@id/FuelIcon2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="5dp"
                            android:text="Petrol"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            />
                        <ImageView
                            android:id="@+id/LocationIcon22"
                            android:layout_toRightOf="@id/Fueltext2"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="0dp"
                            android:contentDescription="LocationIcon"
                            android:src="@drawable/location" />

                        <TextView
                            android:id="@+id/locationtext2"
                            android:layout_toRightOf="@id/LocationIcon22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="2dp"
                            android:text="Karachi"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            >


        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_marginTop="660dp"
        android:background="#0012BD"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_bar"
        />
</FrameLayout>