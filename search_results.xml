<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#0012BD"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/arrow_back12"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:contentDescription="Back Arrow"
                android:src="@drawable/arrow_back" />

            <SearchView
                android:id="@+id/searchview1"
                android:layout_marginLeft="50dp"
                android:layout_width="195dp"
                android:queryHint="Search Cars"
                android:layout_height="wrap_content"
                android:background="@color/white"
                />
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:background="@color/white"
                android:layout_toRightOf="@+id/searchview1"
                android:orientation="horizontal">

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:background="#000000" />
                <ImageView
                    android:id="@+id/LocationIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="11dp"
                    android:contentDescription="Location Icon"
                    android:src="@drawable/location" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="15dp"
                    android:clickable="true"
                    android:text="All Cities"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Sort"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/SortIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/text3"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="SortIcon"
            android:src="@drawable/sort" />


        <TextView
            android:id="@+id/text4"
            android:layout_toRightOf="@id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="0dp"
            android:text=" Filter"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/FilterIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/text4"
            android:layout_marginStart="05dp"
            android:layout_marginTop="0dp"
            android:contentDescription="FilterIcon"
            android:src="@drawable/filter_6551" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000" />
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="12"
            android:textColor="@color/black"
            android:textSize="18dp"
             />

        <TextView
            android:id="@+id/text5"
            android:layout_toRightOf="@id/numtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:text="results for: "
            android:textColor="@color/black"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/Searchtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/text5"
            android:text="civic"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000" />

    <RelativeLayout
        android:id="@+id/CarResult"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:background="#F5F0E5"
        android:clickable="true"
        android:layout_width="350dp"
        android:layout_height="160dp">

        <RelativeLayout
            android:id="@+id/imgcontainer"
            android:layout_centerVertical="true"
            android:layout_width="150dp"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info1"
            android:layout_toRightOf="@id/imgcontainer"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="#D9D9D9"
            android:layout_width="190dp"
            android:layout_height="140dp">

            <TextView
                android:id="@+id/text11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:text="Honda Civic 1.8 i-VTEC CVT"
                android:textColor="@color/black"
                android:textSize="18dp"
                 />

            <TextView
                android:id="@+id/text12"
                android:layout_below="@id/text11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:text="PKR 42.75 lacs"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:id="@+id/infoup2"
                android:layout_below="@id/text12"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/CalendarIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="CalendarIcon"
                    android:src="@drawable/calendar_symbol_svgrepo_com" />
                <TextView
                    android:id="@+id/modeltext"
                   android:layout_toRightOf="@id/CalendarIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:text="2017"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />
                <ImageView
                    android:id="@+id/MileageIcon"
                    android:layout_toRightOf="@id/modeltext"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="MileageIcon"
                    android:src="@drawable/mileage" />

                <TextView
                    android:id="@+id/mileagetext"
                    android:layout_toRightOf="@id/MileageIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="2dp"
                    android:text="110,000km"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/infoup2"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/FuelIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="FuelIcon"
                    android:src="@drawable/gas_station_icon" />
                <TextView
                    android:id="@+id/Fueltext"
                    android:layout_toRightOf="@id/FuelIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:text="Petrol"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />
                <ImageView
                    android:id="@+id/LocationIcon2"
                    android:layout_toRightOf="@id/Fueltext"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="LocationIcon"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/locationtext"
                    android:layout_toRightOf="@id/LocationIcon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="2dp"
                    android:text="Lahore"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:background="#F5F0E5"
        android:layout_width="350dp"
        android:layout_height="160dp">

        <RelativeLayout
            android:id="@+id/imgcontainer2"
            android:layout_centerVertical="true"
            android:layout_width="150dp"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info2"
            android:layout_toRightOf="@id/imgcontainer2"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="#D9D9D9"
            android:layout_width="190dp"
            android:layout_height="140dp">

            <TextView
                android:id="@+id/text21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:text="Honda Civic 1.5 RS Turbo"
                android:textColor="@color/black"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/text22"
                android:layout_below="@id/text21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:text="PKR 66.5 lacs"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:id="@+id/info21"
                android:layout_below="@id/text22"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/CalendarIcon2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="CalendarIcon"
                    android:src="@drawable/calendar_symbol_svgrepo_com" />
                <TextView
                    android:id="@+id/modeltext2"
                    android:layout_toRightOf="@id/CalendarIcon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:text="2020"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />
                <ImageView
                    android:id="@+id/MileageIcon2"
                    android:layout_toRightOf="@id/modeltext2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="MileageIcon"
                    android:src="@drawable/mileage" />

                <TextView
                    android:id="@+id/mileagetext2"
                    android:layout_toRightOf="@id/MileageIcon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="2dp"
                    android:text="36,000km"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/info21"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/FuelIcon2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="FuelIcon"
                    android:src="@drawable/gas_station_icon" />
                <TextView
                    android:id="@+id/Fueltext2"
                    android:layout_toRightOf="@id/FuelIcon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:text="Petrol"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />
                <ImageView
                    android:id="@+id/LocationIcon22"
                    android:layout_toRightOf="@id/Fueltext2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="LocationIcon"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/locationtext2"
                    android:layout_toRightOf="@id/LocationIcon22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="2dp"
                    android:text="Karachi"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:background="#F5F0E5"
        android:layout_width="350dp"
        android:layout_height="160dp">

        <RelativeLayout
            android:id="@+id/imgcontainer3"
            android:layout_centerVertical="true"
            android:layout_width="150dp"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info3"
            android:layout_toRightOf="@id/imgcontainer3"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="#D9D9D9"
            android:layout_width="190dp"
            android:layout_height="140dp">

            <TextView
                android:id="@+id/text31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:text="Honda Civic RS "
                android:textColor="@color/black"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/text32"
                android:layout_below="@id/text31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="PKR 94.1 lacs"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:id="@+id/info31"
                android:layout_below="@id/text32"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/CalendarIcon3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="CalendarIcon"
                    android:src="@drawable/calendar_symbol_svgrepo_com" />
                <TextView
                    android:id="@+id/modeltext3"
                    android:layout_toRightOf="@id/CalendarIcon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:text="2023"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />
                <ImageView
                    android:id="@+id/MileageIcon3"
                    android:layout_toRightOf="@id/modeltext3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="MileageIcon"
                    android:src="@drawable/mileage" />

                <TextView
                    android:id="@+id/mileagetext3"
                    android:layout_toRightOf="@id/MileageIcon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="2dp"
                    android:text="14,000km"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/info31"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/FuelIcon3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="FuelIcon"
                    android:src="@drawable/gas_station_icon" />
                <TextView
                    android:id="@+id/Fueltext3"
                    android:layout_toRightOf="@id/FuelIcon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:text="Petrol"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />
                <ImageView
                    android:id="@+id/LocationIcon32"
                    android:layout_toRightOf="@id/Fueltext3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="LocationIcon"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/locationtext3"
                    android:layout_toRightOf="@id/LocationIcon32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="2dp"
                    android:text="Islamabad"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>