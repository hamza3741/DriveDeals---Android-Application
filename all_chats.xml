<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.smdproject.chatscreen"
    android:id="@+id/frame_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C1DBDF"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#0012BD"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/arrow_back14"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="85dp"
                android:contentDescription="Back Arrow"
                android:src="@drawable/arrow_back"
                 />

            <TextView
                android:id="@+id/textNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:text="Recent Chats"
                android:textColor="@color/white"
                android:textSize="27dp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:background="@color/white"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">


            <RelativeLayout
                android:id="@+id/ChatItem1"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_height="65dp"
                android:background="#C1DBDF"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_marginStart="20dp"
                    android:id="@+id/image_profile6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/profile"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:id="@+id/lin6"
                    android:layout_width="150dp"
                    android:layout_toRightOf="@+id/image_profile6"
                    android:layout_height="60dp"
                    android:background="#C1DBDF"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/textJohnCooper1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                            android:text="M. Abdullah"
                        android:clickable="true"
                        android:textColor="#2196F3"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/textmsg1"
                        android:layout_below="@+id/textJohnCooper1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="20dp"
                        android:text="No New Messages"
                        android:textColor="#707171"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <View
                    android:layout_below="@+id/lin6"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/darker_gray" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lin7"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#C1DBDF"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_marginStart="20dp"
                    android:id="@+id/image_profile7"
                    android:layout_width="50dp"
                    app:tint="#E44715"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/profile"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:id="@+id/lin8"
                    android:layout_width="150dp"
                    android:layout_toRightOf="@+id/image_profile7"
                    android:layout_height="60dp"
                    android:background="#C1DBDF"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/textJohnCooper2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:text="Ali Khan"
                        android:textColor="#2196F3"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/textmsg2"
                        android:layout_below="@+id/textJohnCooper2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="20dp"
                        android:text="No New Messages"
                        android:textColor="#707171"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <View
                    android:layout_below="@+id/lin8"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/darker_gray" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lin9"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#C1DBDF"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_marginStart="20dp"
                    android:id="@+id/image_profile8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:tint="#999999"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/profile"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:id="@+id/lin10"
                    android:layout_width="150dp"
                    android:layout_toRightOf="@+id/image_profile8"
                    android:layout_height="60dp"
                    android:background="#C1DBDF"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/textJohnCooper3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:text="Rafay Sohail"
                        android:textColor="#2196F3"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/textmsg3"
                        android:layout_below="@+id/textJohnCooper3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="20dp"
                        android:text="No New Messages"
                        android:textColor="#707171"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <View
                    android:layout_below="@+id/lin10"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/darker_gray" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_marginTop="660dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#0012BD"
        app:itemTextAppearanceInactive="@style/BottomNavigationView.InactiveText"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_bar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="650dp" />
</FrameLayout>


