<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".InsuranceHome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#0012BD"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/arrow_back22"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:tint="@color/white"
            android:contentDescription="Back Arrow"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="407dp"
            android:layout_height="100dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="Car Insurance"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="322dp"
        android:layout_height="235dp"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="0dp"
        android:scaleType="center"
        app:srcCompat="@drawable/insurance2" />

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="81dp"
            android:layout_height="59dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="192dp"
            app:srcCompat="@drawable/carmodel" />

        <EditText
            android:layout_toRightOf="@id/imageView5"
            android:id="@+id/editTextText"
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Car Model"
            android:inputType="text"
            android:textColorHint="#0012BD"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="73dp"
            android:layout_marginLeft="8dp"
            android:layout_height="53dp"
            app:srcCompat="@drawable/price" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="200dp"
            android:layout_toRightOf="@id/imageView6"
            android:layout_height="46dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Price"
            android:inputType="number"
            android:textColorHint="#0012BD"
             />

    </RelativeLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="44dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#0012BD"
        android:text="Show"
        android:textColor="@color/white"
        android:textStyle="bold"
         />
</LinearLayout>